        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "amount",
                  "date",
                  "norm"
                ],
                "properties": {
                  "amount": {
                    "type": "number",
                    "example": 50,
                    "description": "Amount of water in milliliters"
                  },
                  "date": {
                    "type": "string",
                    "example": 1720717617
                  },
                  "norm": {
                    "type": "number",
                    "example": 1.8,
                    "description": "Water rate in liters"
                  }
                }
              }
            }
          }
        },
